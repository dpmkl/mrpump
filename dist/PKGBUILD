# Maintainer: mrpump developers

pkgname=mrpump
pkgver=0.1.0
pkgrel=1
pkgdesc="A simple TCP socket proxy"
arch=('x86_64')
url="https://github.com/mrpump/mrpump"
license=('MIT')
depends=('gcc-libs')
makedepends=('rust')
source=("$pkgname-$pkgver.tar.gz") # Placeholder for source URL
install=$pkgname.install

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --locked
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm755 "target/release/mrpump" "$pkgdir/usr/bin/mrpump"
  install -Dm644 "mrpump.service" "$pkgdir/usr/lib/systemd/system/mrpump.service"
  install -Dm644 "config.yaml" "$pkgdir/etc/mrpump/config.yaml"
  install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
